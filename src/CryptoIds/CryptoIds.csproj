<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>CryptoIds</PackageId>
    <Version>0.1.0-alpha</Version>
    <Authors>krivil</Authors>
    <Description>Obfuscate sequential IDs</Description>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/krivil/CryptoIds</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageTags>Databse;Id;Cryptography;REST;Api;Storage;Security</PackageTags>
    <Description>
      This client library enables working with database sequential ids in a secure way.
    </Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.png" Pack="true" PackagePath=""/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Hashing" Version="8.0.0" />
  </ItemGroup>

</Project>
